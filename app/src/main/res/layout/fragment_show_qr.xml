<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/qmui_config_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/icon_cancel"
                android:contentDescription="@string/qr_cancel_btn_des" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13.5dp"
            android:text="@string/qr_pocket_address_title" />

        <TextView
            android:id="@+id/qr_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/address_copy_btn"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.5dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/qr_copy_btn_text"
            android:textColor="@color/qmui_config_color_white"
            app:qmui_backgroundColor="@color/app_btn_color_blue"
            app:qmui_borderColor="@color/app_btn_color_blue"
            app:qmui_radius="4dp" />

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_dash_line"
            android:layerType="software" />

        <ImageView
            android:id="@+id/qr_pocket_address_image"
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/qr_pic_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="@string/qr_pic_name_text"/>
    </LinearLayout>


</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>