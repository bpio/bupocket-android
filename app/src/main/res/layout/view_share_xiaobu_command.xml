<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_corner"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="29dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/app_txt_color_gray_2"
                android:text="@string/xiaobu_command_title_txt"/>

            <TextView
                android:id="@+id/xiaobuCommandContentTv"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_bg_gray_2"
                android:lineSpacingMultiplier="1.3"/>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/copyCommandBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="18sp"
                android:text="@string/copy_command_txt"
                android:textColor="@color/qmui_config_color_white"
                app:qmui_backgroundColor="@color/app_color_main"
                app:qmui_borderColor="@color/app_color_main"
                app:qmui_radius="4dp" />

        </LinearLayout>


        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/nodeIconIv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_xiaobu_command_top"
            app:qmui_border_width="5dp"
            app:qmui_border_color="@color/app_color_white"
            app:qmui_is_circle="true" />
    </RelativeLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>