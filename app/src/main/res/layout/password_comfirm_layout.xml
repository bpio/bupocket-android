<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="@drawable/shape_corner">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="24dp" android:layout_marginLeft="22.5dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="22.5dp" android:orientation="vertical">

            <ImageView
                    android:id="@+id/passwordConfirmCloseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO" android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/icon_cancel" />

            <TextView
                    android:id="@+id/passwordConfirmTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/password_comfirm_dialog_title"
                    android:textColor="@color/send_confirm_title_color"
                    android:textSize="27sp" />

            <TextView
                    android:id="@+id/passwordConfirmNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="@string/password_comfirm_dialog_sub_txt"
                    android:textColor="@color/send_confirm_info_color"
                    android:textSize="14sp" />


            <EditText
                    android:id="@+id/passwordConfirmEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:inputType="textPassword"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp"
                    android:hint="@string/hint_wallet_passwrod_confirm_txt1"
                    android:background="@drawable/edit_border_bg"
            />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/passwordConfirmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/wallet_create_ok_btn"
                    android:textColor="@color/qmui_config_color_white"
                    app:qmui_backgroundColor="@color/app_btn_color_blue"
                    app:qmui_borderColor="@color/app_btn_color_blue"
                    app:qmui_radius="4dp" />
        </LinearLayout>
    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>