<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tx_list_view_background_col">

    <com.qmuiteam.qmui.widget.QMUIAppBarLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.QMUICollapsingTopBarLayout
            android:id="@+id/collapsing_topbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="?attr/qmui_topbar_height"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:qmui_contentScrim="?attr/qmui_config_color_blue"
            app:qmui_statusBarScrim="?attr/qmui_config_color_blue"
            app:qmui_titleEnabled="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_me_header_bg"
                android:fitsSystemWindows="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/assetIconIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="83.5dp"
                    app:qmui_is_circle="true" />

                <TextView
                    android:id="@+id/assetAmountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="58.11111BU"
                    android:textColor="@color/app_color_white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/assetValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.5dp"
                    android:text="= ï¿¥121.00"
                    android:textColor="@color/app_color_white" />
            </LinearLayout>


            <com.qmuiteam.qmui.widget.QMUITopBar
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/qmui_topbar_height"
                android:fitsSystemWindows="true"
                app:qmui_layout_collapseMode="pin"
                app:qmui_topbar_bg_color="@color/qmui_config_color_transparent"
                app:qmui_topbar_need_separator="false"
                app:qmui_topbar_title_color="@color/app_color_white" />
        </com.qmuiteam.qmui.widget.QMUICollapsingTopBarLayout>

    </com.qmuiteam.qmui.widget.QMUIAppBarLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@color/tx_list_view_background_col"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:background="@drawable/text_view_left_borer_bg2"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/recently_tx_txt" />

        <com.qmuiteam.qmui.widget.QMUIEmptyView
            android:paddingTop="10dp"
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnableScrollContentWhenLoaded="true"
                app:srlEnableFooterFollowWhenLoadFinished="true">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ListView
                    android:id="@+id/myTokenTxLv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/token_list_view_background_color"
                    android:dividerHeight="10dp"
                    android:scrollbars="none"
                    android:fadeScrollbars="false">
                </ListView>

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlClassicsSpinnerStyle="Translate"/>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </com.qmuiteam.qmui.widget.QMUIEmptyView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/walletScanBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bp_btn_hight"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:text="@string/wallet_scan_txt"
            app:qmui_borderColor="@color/app_btn_color_white"
            app:qmui_backgroundColor="@color/scan_btn_background_color"
            app:qmui_radius="5dp"
            android:textColor="@color/app_color_font"
            android:textSize="@dimen/bp_btn_text_size"/>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/walletSendBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bp_btn_hight"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wallet_send_txt"
            app:qmui_borderColor="@color/app_btn_color_blue"
            app:qmui_backgroundColor="@color/app_btn_color_blue"
            app:qmui_radius="5dp"
            android:textColor="@color/app_color_font"
            android:textSize="@dimen/bp_btn_text_size"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>