<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/create_walelt_bg">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:clickable="false"
            android:src="@mipmap/icon_create_wallet_logo"
            app:qmui_border_width="0dp"
            app:qmui_is_circle="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_create_txt"
            android:textColor="@color/app_color_black"
            android:textSize="24sp" />


        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/create_wallet_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bp_btn_hight"
            android:layout_marginTop="86dp"
            android:gravity="center"
            android:text="@string/view_title_create_wallet_identity"
            android:textColor="@color/app_color_font"
            android:textSize="@dimen/bp_btn_text_size"
            app:qmui_backgroundColor="@color/app_color_main"
            app:qmui_borderColor="@color/app_color_main"
            app:qmui_radius="5dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/toRecoverWalletBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bp_btn_hight"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="@string/recover_wallet_title"
            android:textColor="@color/app_color_main"
            android:textSize="@dimen/bp_btn_text_size"
            app:qmui_backgroundColor="@color/app_btn_color_white"
            app:qmui_borderColor="@color/app_color_main"
            app:qmui_radius="5dp" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>