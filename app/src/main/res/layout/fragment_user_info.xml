<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@color/qmui_config_color_white"
            android:text="@string/user_info_title"
            android:theme="@style/BPViewTitle" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#E3E3E3"/>
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:text="@string/user_info_avatar">

            </TextView>

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:src="@mipmap/avatar"
                app:qmui_border_color="?attr/qmui_config_color_gray_6"
                app:qmui_border_width="1px"
                app:qmui_is_circle="true"
                app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
                app:qmui_selected_border_width="1px"
                app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#E3E3E3"/>
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:text="@string/user_info_wallet_name">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:textColor="@color/app_btn_color_blue"
                android:text="xxx">
            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#E3E3E3"/>
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:text="@string/user_info_wallet_id">
            </TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="buQcVrPgUUtWTUNLN3C98efWmjytpMtX4AJX"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#E3E3E3"/>
        />

        <TextView
            android:id="@+id/userInfoBackupWalletTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:background="@color/qmui_config_color_white"
            android:textColor="@color/qmui_btn_blue_text"
            android:text="@string/user_info_backup_current_wallet">
        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#E3E3E3"/>
        />

        <TextView
            android:id="@+id/userInfoLogoutWalletTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textColor="#e23b1b"
            android:textAlignment="center"
            android:background="@color/qmui_config_color_white"
            android:text="@string/user_info_logout">
        </TextView>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#E3E3E3"/>
        />

    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"/>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>