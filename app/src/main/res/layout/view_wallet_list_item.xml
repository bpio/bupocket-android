<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/shape_corner"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/walletHeadRiv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_wallet_head_normal"
        app:riv_corner_radius="4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/walletNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/app_color_black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="中国字体好不啊八九十中国sdfd字体好不啊八九十" />


            <TextView
                android:id="@+id/walletSignTv"
                style="@style/BPComGreenBgWhiteTextBtn"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/walletNameTv"
                android:lines="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:text="@string/current_wallet_sign_txt"
                android:textSize="13sp"
             />


        </LinearLayout>


        <TextView
            android:id="@+id/walletAddressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/app_txt_color_gray"
            android:textSize="14sp"
            tools:text="buQhSMWw···4Bo73c8C" />
    </LinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/manageWalletBtn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/manage_txt"
        android:textColor="@color/app_color_main"
        android:textSize="15sp"
        app:qmui_backgroundColor="@color/app_color_white"
        app:qmui_borderColor="@color/app_color_main"
        app:qmui_borderWidth="0.5dp"
        app:qmui_radius="3dp" />

</LinearLayout>