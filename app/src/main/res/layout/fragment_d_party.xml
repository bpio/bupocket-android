<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:qmui_topbar_title_color="@color/app_color_white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_marginTop="?attr/qmui_topbar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include layout="@layout/view_d_party_item" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg_color_gray"
                android:orientation="vertical">

                <TextView
                    style="@style/BPTextViewCommon13"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/d_party_introduce" />


                <TextView
                    android:id="@+id/dPartyIntroduceTv"
                    style="@style/BPTextViewCommon13"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/shape_corner_white"
                    android:minLines="5"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:paddingRight="13dp"

                    android:paddingBottom="15dp"
                    android:textColor="@color/app_txt_color_gray_2"
                    android:textSize="13dp"
                    tools:text="@string/start_custom_service_hint" />

                <TextView
                    style="@style/BPTextViewCommon13"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/delivery_instructions" />


                <TextView
                    android:id="@+id/deliveryInstructionsTv"
                    style="@style/BPTextViewCommon13"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_corner_white"
                    android:minLines="5"
                    android:paddingLeft="11dp"
                    android:paddingTop="15dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/app_txt_color_gray_2"
                    android:textSize="13dp"
                    tools:text="@string/start_custom_service_hint" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


    </ScrollView>


</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>