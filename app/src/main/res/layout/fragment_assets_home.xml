<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableFooterFollowWhenLoadFinished="true"
        app:srlEnableScrollContentWhenLoaded="true">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/assetsSv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/asset_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_asset_header_bg"
                    android:fitsSystemWindows="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:id="@+id/assetsAvatarIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:src="@mipmap/avatar"
                        app:qmui_border_color="?attr/qmui_config_color_gray_6"
                        app:qmui_border_width="1px"
                        app:qmui_is_circle="true"
                        app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
                        app:qmui_selected_border_width="1px"
                        app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8" />

                    <LinearLayout
                        android:id="@+id/userNickAndBackupBtnLt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/userNick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阿木"
                            android:textColor="@color/app_color_font"
                            android:textSize="16sp" />

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                            android:id="@+id/assetBackupWalletBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="3dp"
                            android:text="@string/no_backup_tips_btn"
                            android:textColor="@color/no_backup_tips_color"
                            android:textSize="10sp"
                            app:qmui_backgroundColor="@android:color/transparent"
                            app:qmui_borderColor="@color/no_backup_tips_color"
                            app:qmui_radius="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/showMyAddressLv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/userBcAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="buQevL***WPng8P"
                            android:textColor="@color/app_color_font"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:src="@mipmap/icon_qrcode" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:id="@+id/totalAssetsValueTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≈0.00"
                            android:textColor="@color/app_color_white"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/totalAssetsTitleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/total_assets_title_txt"
                            android:textColor="@color/app_color_white"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/asset_home_background_color"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_view_left_borer_bg1"
                            android:paddingLeft="10dp"
                            android:text="@string/my_assets_title_txt"
                            android:textSize="16sp" />

                        <ImageView
                                android:id="@+id/addTokenIv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_add_token"
                                android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.qmuiteam.qmui.widget.QMUIEmptyView
                        android:id="@+id/assetsHomeEmptyView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/qmui_config_color_white"
                        android:fitsSystemWindows="true">


                        <com.bupocket.fragment.components.AssetsListView
                            android:id="@+id/tokenListLv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/token_list_view_background_color"
                            android:dividerHeight="10dp"
                            android:fadeScrollbars="false"
                            android:scrollbars="none"></com.bupocket.fragment.components.AssetsListView>

                    </com.qmuiteam.qmui.widget.QMUIEmptyView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>