<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white">

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/qmui_topbar_height"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">


                <LinearLayout
                    android:id="@+id/txDetailLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_bg_color_gray_2"
                    android:gravity="center"
                    android:orientation="vertical"
                 >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/app_color_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                            android:id="@+id/txStatusIcon"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="20dp"
                            android:clickable="false"
                            android:src="@mipmap/icon_send_success"
                            app:qmui_border_color="@color/app_color_white"
                            app:qmui_is_circle="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sendAmountTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/app_color_black"
                                android:textSize="23sp" />

                            <TextView
                                android:id="@+id/assetCodeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/app_txt_color_gray_4"
                                android:textSize="23sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txStatusTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/tx_status_success_txt"
                            android:textAlignment="center"
                            android:textColor="@color/app_txt_color_gray"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_top_bottom_padding"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_corner"
                            android:paddingLeft="@dimen/common_left_right_padding"
                            android:paddingRight="@dimen/common_left_right_padding"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="23dp"
                                android:paddingTop="@dimen/common_top_bottom_padding"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"

                                    android:text="@string/tx_from"
                                    android:textColor="@color/app_txt_color_gray_5" />

                                <TextView
                                    android:id="@+id/txFromAccAddrTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:gravity="end"
                                    android:text=""
                                    android:textIsSelectable="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="23dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="@string/tx_to"
                                    android:textColor="@color/app_txt_color_gray_5" />

                                <TextView
                                    android:id="@+id/txToAccAddrTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:gravity="end"
                                    android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"
                                    android:textIsSelectable="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="23dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="@string/tx_fee"
                                    android:textColor="@color/app_txt_color_gray_5" />

                                <TextView
                                    android:id="@+id/txDetailFeeTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:gravity="end"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="23dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="@string/tx_time"
                                    android:textColor="@color/app_txt_color_gray_5" />

                                <TextView
                                    android:id="@+id/txDetailSendDateTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:gravity="end"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="23dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="@string/tx_memo"
                                    android:textColor="@color/app_txt_color_gray_5" />

                                <TextView
                                    android:id="@+id/txDetailNoteTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:gravity="end"
                                    android:text="" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_corner"
                            android:paddingLeft="@dimen/common_left_right_padding"
                            android:paddingRight="@dimen/common_left_right_padding"
                            android:layout_marginTop="@dimen/common_top_bottom_padding"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="TX Info"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="@string/tx_hash_en"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailTXHashTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:textIsSelectable="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="@string/tx_from_en"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailTxInfoSourceAddressTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"
                                        android:textIsSelectable="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="@string/tx_to_en"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailTxInfoDestAddressTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"
                                        android:textIsSelectable="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="@string/tx_value_en"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailTxInfoAmountTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="1000 BU" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="@string/tx_fee_en"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailTxInfoTXFeeTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="0.04309 BU" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="Nonce"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailTxInfoNonceTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="399" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txSignatureTitleTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Transaction Signature"
                                        android:textColor="@color/app_txt_color_gray_5" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/txDetailSignatureListLl"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="@dimen/common_left_right_padding"
                            android:paddingRight="@dimen/common_left_right_padding"
                            android:background="@drawable/shape_corner"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Block Info"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/common_top_bottom_padding"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:layout_marginTop="@dimen/common_top_bottom_padding"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="Block Height"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailBlockInfoBlockHeightTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="30212313" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="Block Hash"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailBlockInfoBlockHashTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text=""
                                        android:textIsSelectable="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="Prev Block Hash"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailBlockInfoPrevBlockHashTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="83a5afe9b4d17bd29dca1beff1e182269f65162a32ce6d9924e7a4695b2d4317"
                                        android:textIsSelectable="true" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="TX Count"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailBlockInfoTXCountTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="256" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="6"
                                        android:text="Consensus Time"
                                        android:textColor="@color/app_txt_color_gray_5" />

                                    <TextView
                                        android:id="@+id/txDetailBlockInfoConsensusTimeTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="end"
                                        android:text="256" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.qmuiteam.qmui.widget.QMUIEmptyView>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>