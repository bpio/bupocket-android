<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:background="@color/qmui_config_color_white">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:scrollbars="none">
    <LinearLayout
            android:id="@+id/txDetailLl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/qmui_topbar_height"
            android:background="#5745C3"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="@dimen/view_padding"
                android:orientation="vertical">
            <com.qmuiteam.qmui.widget.QMUIEmptyView
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/qmui_config_color_white"
                    android:fitsSystemWindows="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">
            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/txStatusIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:src="@mipmap/icon_send_success"
                    app:qmui_border_color="?attr/qmui_config_color_gray_6"
                    app:qmui_border_width="1px"
                    app:qmui_is_circle="true"
                    app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
                    app:qmui_selected_border_width="1px"
                    app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/sendAmountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23sp"
                        android:textColor="#333333"
                        android:text="+1000"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23sp"
                        android:textColor="#bababa"
                        android:paddingLeft="5dp"
                        android:text="BU"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/txStatusTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/send_status_success_txt"
                    android:textAlignment="center"
                    android:textColor="#999999"
                    android:textSize="16sp" />

            <View
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_dash_line"
                    android:layerType="software" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/view_padding"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="@string/tx_dettail_from_acc_addr_label"/>
                    <TextView
                            android:id="@+id/txFromAccAddrTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="@string/tx_dettail_to_acc_addr_label"/>
                    <TextView
                            android:id="@+id/txToAccAddrTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="@string/tx_detail_fee_label"/>
                    <TextView
                            android:id="@+id/txDetailFeeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="0.00248"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="@string/tx_detail_send_date_label"/>
                    <TextView
                            android:id="@+id/txDetailSendDateTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text=""/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="@string/tx_detail_note_label"/>
                    <TextView
                            android:id="@+id/txDetailNoteTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text=""/>
                </LinearLayout>
                <View
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bg_dash_line"
                        android:layerType="software" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:text="TX Info"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="TX Hash"/>
                    <TextView
                            android:id="@+id/txDetailTXHashTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="83a5afe9b4d17bd29dca1beff1e182269f65162a32ce6d9924e7a4695b2d4317"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="Source Address"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoSourceAddressTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="Dest Address"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoDestAddressTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="buQs9npaCq9mNFZG18qu88ZcmXYqd6bqpTU3"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="Amount"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoAmountTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="1000 BU"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="TX Fee"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoTXFeeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="0.04309 BU"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="Nonce"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoNonceTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="399"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:textColor="#888888"
                            android:text="Nonce"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoLedgerSeqTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="30212313"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#888888"
                            android:text="Transaction Signature"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/view_padding"
                        android:background="#F8F8F8"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#888888"
                            android:text="Public Key"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoTxSignaturePkTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="b001a205903185fb4d2be3b21ee3afe1a6eab8975499dc72c99ee6a8a891e4b4ee87f3cfceba"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/view_padding"
                        android:background="#F8F8F8"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#888888"
                            android:text="Singed Data"/>
                    <TextView
                            android:id="@+id/txDetailTxInfoTxSignatureSdTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="b001a205903185fb4d2be3b21ee3afe1a6eab8975499dc72c99ee6a8a891e4b4ee87f3cfceba"/>
                </LinearLayout>

                <View
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bg_dash_line"
                        android:layerType="software" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:text="Block Info"/>
            </LinearLayout>
            </LinearLayout>
            </com.qmuiteam.qmui.widget.QMUIEmptyView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"/>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>