<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_config_color_gray_1="#333333"
        app:qmui_topbar_bg_color="@color/app_color_white"
        app:qmui_topbar_need_separator="false"
        app:qmui_topbar_title_color="@color/app_color_black"
        app:qmui_topbar_title_text_size="21sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/tvBuildExitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="共建Name"
            android:textColor="@color/app_color_black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_txt_color_gray_3" />

        <TextView
            style="@style/tv_node_build_gray_style"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="10dp"
            android:text="@string/build_exit_support_amount"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvBuildExitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:text="50000"
            android:textColor="@color/send_confirm_title_color"
            android:textSize="32sp" />


        <Button
            android:id="@+id/btnBuildExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_corner_red2"
            android:text="@string/build_exit"
            android:textColor="@color/app_color_white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/app_bg_color_gray_3"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/build_exit_hint"
            android:textColor="@color/app_txt_color_gray"
            android:textSize="13sp" />


    </LinearLayout>


</LinearLayout>