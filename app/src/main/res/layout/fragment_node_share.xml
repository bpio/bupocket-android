<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color_gray">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@color/app_color_white">

            <RelativeLayout
                android:id="@+id/nodeIconRl"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12.5dp"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/nodeIconBgIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/icon_token_bg_list"/>

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/nodeIconIv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:qmui_border_width="0dp"
                    app:qmui_is_circle="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_node_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/nodeIconRl"
                android:layout_width="match_parent"
                android:layout_marginRight="13dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nodeNameTv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    tools:text="股神股神 股神股神 啊股神" />

                <TextView
                    android:id="@+id/nodeTypeTv"
                    android:layout_toRightOf="@+id/nodeNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginLeft="7.5dp"
                    tools:text="共识节点"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="#B2B2B2"
                    android:background="@drawable/shape_corner_bg_gray"/>

                <LinearLayout
                    android:id="@+id/shareBtn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_share_btn_bg"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_share_white"/>

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_txt"
                        android:textSize="14sp"
                        android:textColor="@color/app_color_white"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rl_node_name"
                android:layout_toRightOf="@+id/nodeIconRl"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/haveVotesNumLl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/haveVotesNumTvHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/number_have_votes"
                        android:textColor="@color/multiline_edit_hint_color"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/haveVotesNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="14sp"
                        android:textColor="@color/app_txt_color_gray_2"
                        tools:text="7833993" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myVotesNumLl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="59.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/haveVotesNumLl"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/supportPeopleTvHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/multiline_edit_hint_color"
                        android:textSize="12sp"
                        tools:text="@string/my_votes_number" />

                    <TextView
                        android:id="@+id/supportPeopleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/app_txt_color_gray_2"
                        android:textSize="14sp"
                        tools:text="7833993" />


                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/node_introduce_txt"
                android:textSize="13sp"
                android:textColor="@color/app_txt_color_gray"/>

          <WebView
              android:id="@+id/wbShare"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="none"
              android:paddingTop="12dp"
              android:paddingBottom="15dp"
              android:paddingLeft="13dp"
              android:paddingRight="13dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="10dp"
              android:background="@drawable/shape_corner"
              />


        </LinearLayout>
    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_bg_color="@color/app_color_white"
        app:qmui_topbar_need_separator="false"
        app:qmui_topbar_title_color="@color/app_color_black" />

</android.support.design.widget.CoordinatorLayout>
