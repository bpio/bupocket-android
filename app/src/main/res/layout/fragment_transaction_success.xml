<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@mipmap/icon_send_success" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@color/app_txt_color_gray_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_transaction_process" />

            <View
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:background="@color/app_txt_color_gray_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_transaction_refresh" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                style="@style/tv_com_gray66_style"
                android:text="@string/transaction_success_title" />

            <TextView
                style="@style/tv_node_build_black_style"
                android:layout_marginTop="12dp"
                android:text="@string/transaction_success_title_info" />

            <TextView
                style="@style/tv_com_gray66_style"
                android:layout_marginTop="30dp"
                android:text="@string/transaction_process_title" />/>

            <TextView
                style="@style/tv_node_build_black_style"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/transaction_process_title_info" />
            />

            <TextView
                style="@style/tv_com_gray66_style"
                android:layout_marginTop="25dp"
                android:text="@string/transaction_refresh_title" />/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/tv_node_build_black_style"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="13dp"
        android:padding="15dp"
        android:background="@color/app_bg_color_gray_3"
        android:text="@string/transaction_success_hint" />

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_me_header_bg"

        />


</LinearLayout>