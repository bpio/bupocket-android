<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_border_bg_white">

        <ImageView
            android:id="@+id/ivBuildDetailHead"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_support_head_record" />

        <TextView
            android:id="@+id/tvBuildDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ivBuildDetailHead"
            android:text="sdajflaadf"
            android:textColor="@color/app_txt_color_gray_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvBuildDetailTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBuildDetailAddress"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/ivBuildDetailHead"
            android:text="2019-04-01 11:50:04"
            android:textColor="@color/send_confirm_gray_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBuildDetailNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="10000BU"
            android:textColor="@color/send_confirm_title_color"
            android:textSize="16sp" />


    </RelativeLayout>

</LinearLayout>