<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nodeStateRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>


    <TextView
        android:id="@+id/stateDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:textColor="@color/app_txt_color_gray_2"
        android:textSize="14sp"
        tools:text="02-12" />

    <TextView
        android:id="@+id/stateTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stateDateTv"
        android:layout_alignRight="@+id/stateDateTv"
        android:textColor="@color/app_txt_color_gray"
        android:textSize="12sp"
        tools:text="02:12" />


    <View
        android:id="@+id/stateLineBottomView"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/stateDateTv"
        android:background="@color/gray_line" />

    <View
        android:id="@+id/stateLineTopView"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/stateDateTv"
        android:background="@color/gray_line" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/stateTagIV"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/stateDateTv"
        android:src="@color/app_color_green"
        app:riv_oval="true" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/stateTagGreenIV"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/stateDateTv"
        android:src="@mipmap/ic_node_state"
        android:visibility="gone"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/stateDetailNodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/stateTagIV"
        android:textColor="@color/app_color_green"
        android:visibility="gone"
        android:textSize="14sp"
        tools:text="bumeme" />

    <TextView
        android:id="@+id/stateDetailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/stateDetailNodeTv"
        android:layout_toRightOf="@+id/stateTagIV"
        android:textColor="@color/app_txt_color_gray_2"
        android:textSize="13sp"
        tools:text="bumeme" />

</RelativeLayout>