<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/qmui_config_color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qmui_topbar_height"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="128dp"
            android:layout_height="100dp"
            android:background="@mipmap/issue_token_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_confirm_issue_token_info_txt"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/app_txt_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="10dp"
            android:background="@drawable/bg_layout_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/token_info_name_txt"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:textColor="@color/app_txt_color_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/token_info_name_txt"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_txt_color_gray_2"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/token_info_code_txt"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:textColor="@color/app_txt_color_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/token_info_code_txt"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_txt_color_gray_2"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/token_info_amount_txt"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:textColor="@color/app_txt_color_gray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/token_info_amount_txt"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_txt_color_gray_2"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/issue_token_fee_txt"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:textColor="@color/app_txt_color_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/issue_token_fee_txt"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_txt_color_gray_2"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/registerConfirmBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bp_btn_hight"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/confirm_issue_token_btn_txt"
                android:textColor="@color/app_color_font"
                android:textSize="@dimen/bp_btn_text_size"
                app:qmui_backgroundColor="@color/app_btn_color_blue"
                app:qmui_borderColor="@color/disabled_btn_color"
                app:qmui_radius="5dp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/registerCancelBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bp_btn_hight"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/qr_cancel_btn_des"
                android:textColor="@color/app_color_font"
                android:textSize="@dimen/bp_btn_text_size"
                app:qmui_backgroundColor="@color/app_btn_color_purple"
                app:qmui_borderColor="@color/disabled_btn_color"
                app:qmui_radius="5dp" />
        </LinearLayout>
    </LinearLayout>
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"/>

</android.support.design.widget.CoordinatorLayout>