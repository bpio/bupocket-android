<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/assetIconIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="false"
            app:qmui_border_color="?attr/qmui_config_color_gray_6"
            app:qmui_border_width="1px"
            app:qmui_is_circle="true"
            app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
            app:qmui_selected_border_width="1px"
            app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assetCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/search_token_asset_code_txt_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/assetNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/search_token_item_txt_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/assetIssuerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/search_token_item_txt_color"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/tokenOptAddBtn"
                android:layout_width="53dp"
                android:layout_height="25dp"
                android:layout_marginRight="0dp"
                android:focusable="false"
                android:text="@string/add_token_btn_txt"
                app:qmui_borderColor="@color/app_btn_color_white"
                app:qmui_backgroundColor="@color/app_color_blue_2"
                app:qmui_radius="1dp"
                android:textColor="@color/app_color_font"
                android:visibility="visible" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/tokenOptCancelCBtn"
                android:layout_width="53dp"
                android:layout_height="25dp"
                android:text="@string/delete_token_btn_txt"
                android:layout_marginRight="0dp"
                android:focusable="false"
                app:qmui_borderColor="@color/app_btn_color_white"
                app:qmui_backgroundColor="@color/app_color_blue_2"
                app:qmui_radius="1dp"
                android:textColor="@color/app_color_font"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>