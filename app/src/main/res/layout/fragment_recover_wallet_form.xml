<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/app_color_white_background"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:padding="10dp"-->
            <!--android:text="@string/recover_wallet_title"-->
            <!--android:theme="@style/BPViewTitle" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recover_edit_mneonic_code" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/understand_mnemonic_txt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_hint_question_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/view_padding">

                <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/recoverMneonicCodeEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#F5F5F5"
                        android:gravity="start|top"
                        android:hint="@string/recover_edit_mneonic_code_hint"
                        android:inputType="textMultiLine"
                        android:minLines="6"
                        android:padding="10dp"
                        android:textColorHint="@color/multiline_edit_hint_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/recoverWalletNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recover_edit_new_wallet_name_hint"
                    android:inputType=""
                    android:theme="@style/BPEditText" />

                <TextView
                    android:id="@+id/tv_create_wallet_name_err_hint"
                    style="@style/CreateWalletErr"
                    android:text="@string/create_wallet_name_err_hint" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/recoverPwdEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="start"
                        android:hint="@string/hint_wallet_create_form_input_password"
                        android:inputType="textPassword"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:theme="@style/BPEditText" />

                    <ImageView
                        android:id="@+id/recoverShowPwdIv"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:src="@mipmap/icon_close_eye" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_create_wallet_pw_err_hint"
                    style="@style/CreateWalletErr"
                    android:text="@string/create_wallet_pw_err_hint" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/recoverConfirmPwdEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="start"
                        android:hint="@string/hint_wallet_create_form_input_rePassword"
                        android:inputType="textPassword"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:theme="@style/BPEditText" />

                    <ImageView
                        android:id="@+id/recoverShowConfirmPwdIv"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:src="@mipmap/icon_close_eye" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_create_wallet_pw_confirm_err_hint"
                    style="@style/CreateWalletErr"
                    android:text="@string/create_wallet_pw_confirm_err_hint" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/recoverWalletSubmitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bp_btn_hight"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/recover_wallet_title"
                    android:textColor="@color/app_btn_color_white"
                    android:textSize="18sp"
                    app:qmui_backgroundColor="@color/disabled_btn_color"
                    app:qmui_borderColor="@color/disabled_btn_color"
                    app:qmui_radius="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_color_white"
                    android:padding="@dimen/view_padding"
                    android:text="@string/create_wallet_prompt_txt3" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_white"
        android:fitsSystemWindows="true" />

</android.support.design.widget.CoordinatorLayout>