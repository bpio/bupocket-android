<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1.5dip" />

            <gradient
                android:angle="0"
                android:centerColor="@color/gray_bg_color_2"
                android:endColor="@color/gray_bg_color_2"
                android:startColor="@color/gray_bg_color_2" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1.5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="@color/app_color_green"
                    android:endColor="@color/app_color_green"
                    android:startColor="@color/app_color_green" />
            </shape>
        </clip>
    </item>

</layer-list>